{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "isolatedModules": false,

    "noEmit": false,
    "outDir": "dist",
    "rootDir": "."
  },
  "include": ["cli/**/*", "lib/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
